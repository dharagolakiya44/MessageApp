<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:name=".Controller"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/messageapp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MessageApp">
        <activity
            android:name=".ui.swipeAction.ChangeSwipeActionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.theme.SelectThemeModeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.archived.ArchivedActivity"
            android:exported="false" />
        <activity
            android:name=".ui.scheduled.ScheduledActivity"
            android:exported="false" />
        <activity
            android:name=".ui.blocked.BlockedActivity"
            android:exported="false" />
        <activity
            android:name=".ui.contacts.ContactSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.conversation.ConversationActivity"
            android:exported="false" />
    </application>

</manifest>