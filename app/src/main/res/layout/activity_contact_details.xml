<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBgMain">

    <!-- Custom Toolbar -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:background="@color/colorBgMain">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cancel"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_back"
            app:tint="@color/colorIconBlack" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/button_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/delete"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_delete"
            app:tint="@color/colorIconBlack" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">

            <!-- Profile Picture -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_profile_circle">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user_placeholder"
                    android:scaleType="centerInside"
                    android:padding="20dp" />
            </FrameLayout>

            <!-- Contact Name -->
            <TextView
                android:id="@+id/text_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_semi_bold"
                android:textColor="@color/colorIconBlack"
                android:textSize="24sp"
                tools:text="Trivenni" />

            <!-- Phone Number -->
            <TextView
                android:id="@+id/text_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/colorTextHint"
                android:textSize="16sp"
                tools:text="Mobile 6583952483" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:paddingHorizontal="32dp"
                android:gravity="center">

                <!-- Call Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/button_call"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_action_button_green"
                        android:padding="16dp"
                        app:srcCompat="@drawable/ic_call"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/call"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextBlack"
                        android:fontFamily="@font/inter_medium" />
                </LinearLayout>

                <!-- Message Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/button_message"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_action_button_blue"
                        android:padding="16dp"
                        app:srcCompat="@drawable/ic_chat_bubble"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/message"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextBlack"
                        android:fontFamily="@font/inter_medium" />
                </LinearLayout>

                <!-- Archive Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/button_archive"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_action_button_orange"
                        android:padding="16dp"
                        app:srcCompat="@drawable/ic_archive"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/archive"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextBlack"
                        android:fontFamily="@font/inter_medium" />
                </LinearLayout>

                <!-- Block Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/button_block"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_action_button_red"
                        android:padding="16dp"
                        app:srcCompat="@drawable/ic_block"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/block"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextBlack"
                        android:fontFamily="@font/inter_medium" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

