<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.messageapp.ui.home.HomeFragment"
        android:label="Messages" >
        <action
            android:id="@+id/action_homeFragment_to_conversationFragment"
            app:destination="@id/conversationFragment" />
        <action
            android:id="@+id/action_homeFragment_to_contactSelectionFragment"
            app:destination="@id/contactSelectionFragment" />
    </fragment>

    <fragment
        android:id="@+id/archivedFragment"
        android:name="com.example.messageapp.ui.archived.ArchivedFragment"
        android:label="Archived" >
        <action
            android:id="@+id/action_archivedFragment_to_conversationFragment"
            app:destination="@id/conversationFragment" />
    </fragment>

    <fragment
        android:id="@+id/conversationFragment"
        android:name="com.example.messageapp.ui.conversation.ConversationFragment"
        android:label="Conversation" >
        <argument
            android:name="conversationId"
            app:argType="long" />
        <argument
            android:name="contactName"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/contactSelectionFragment"
        android:name="com.example.messageapp.ui.contacts.ContactSelectionFragment"
        android:label="Select Contact" >
        <action
            android:id="@+id/action_contactSelectionFragment_to_conversationFragment"
            app:destination="@id/conversationFragment" />
    </fragment>

    <fragment
        android:id="@+id/scheduledFragment"
        android:name="com.example.messageapp.ui.scheduled.ScheduledFragment"
        android:label="Scheduled" />

    <fragment
        android:id="@+id/blockedFragment"
        android:name="com.example.messageapp.ui.blocked.BlockedFragment"
        android:label="Blocked" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.messageapp.ui.settings.SettingsFragment"
        android:label="Settings" />
</navigation>

